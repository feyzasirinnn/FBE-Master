@model UserViewModel


@{
    ViewData["Title"] = "Profil";
}

<h3 class="text-center">Kullanıcı Bilgileri</h3>

<div class="row">
    <div class="col-sm-2">

        <img class="float-right" style="width:170px; height:170px" src="~/avatardefault_92824.png" />

    </div>
    <div class="col-sm-7">
        <table class="table table-bordered table-striped">
            <tr>
                <th>Kullanıcı Adı</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th>E-mail</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Telefon Numarası</th>
                <td>@Model.PhoneNumber</td>
            </tr>
        </table>
    </div>
    <div class="col-sm-3"> 
        <a class="btn btn-info ml-4" style="width:230px; margin-bottom:10px" asp-controller="Profile" asp-action="ChangePassword">Şifre Değiştirme</a>
         
        <a class="btn btn-info ml-4" style="width:230px;" asp-controller="Profile" asp-action="UserEdit">Bilgi Güncelleme</a> 
    </div>
</div>