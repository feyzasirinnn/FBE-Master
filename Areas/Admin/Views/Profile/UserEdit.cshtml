@model UserViewModel

@{
    ViewData["Title"] = "Bilgileri Güncelle";
}
@if (ViewBag.success == "true")
{
    <div class="alert alert-info">
        Bilgileriniz güncellenmiştir!
    </div>
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="admin" asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
        <li class="breadcrumb-item"><a asp-area="admin" asp-controller="Profile" asp-action="Index">Profil</a></li>
        <li class="breadcrumb-item active" aria-current="page">Bilgileri Güncelle</li>
    </ol>
</nav>
<div class="card">
    <div class="card-header">
        <h4 class="float-left  text-info">
            <i class="fa fa-edit fa-lg text-info"></i>Bilgileri Güncelle
        </h4>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-9">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary()
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon3">Kullanıcı Adı</span>
                        </div>
                        <input asp-for="UserName" type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">
                        @*<input asp-for="Title" placeholder="Slayt Başlığı" />*@
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon3">E-mail</span>
                        </div>
                        <input asp-for="Email" type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">
                    </div>

                    @*<input asp-for="Description" type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">*@
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon3">Telefon Numarası</span>
                        </div>
                        <input asp-for="PhoneNumber" type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">
                    </div>

                    <!--İPTAL-->
                    <div class="float-right">
                        <a href="@Url.Action("Index")" class="btn btn-warning" style="width:140px;">
                            <i class="fa fa-arrow-left"></i>
                            İptal
                        </a>

                        <!--EKLE-->
                        <button type="submit" class="btn btn-info ml-4" style="width:140px;"> 
                            Kaydet
                        </button>
                    </div>
                }
            </div>
            <div class="col-md-3">
                <a class="btn btn-info ml-4" style="width:230px; margin-bottom:10px" asp-controller="Profile" asp-action="ChangePassword">Şifre Değiştirme</a>

                <a class="btn btn-info ml-4" style="width:230px;" asp-controller="Profile" asp-action="UserEdit">Bilgi Güncelleme</a>
            </div>

        </div>
    </div>
</div>
