@model List<AppUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card-title text-center">
    <h3><strong>Kullanıcılar</strong></h3>
</div>
<form method="post">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="admin" asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
            <li class="breadcrumb-item active" aria-current="page">Kullanıcılar</li>
        </ol>
    </nav>
    <div class="card">
        <div class="card-header text-hover-secondary">
            <div class="float-right">
                <a asp-area="admin" asp-controller="Account" asp-action="SignUp">
                    <i class="fa fa-plus"></i>
                    <span class="hidden-xs-down">Yeni Kullanıcı</span>
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr> 
                            <th scope="col">Kullanıcı Adı</th>
                            <th scope="col">E-mail</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() == 0)
                        {
                            <tr>
                                <td colspan="3">Hiç bir kullanıcı yoktur. </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th>
                                        <a asp-area="admin" asp-controller="Account" asp-action="Edit" asp-route-id="@item.UserName">
                                            @item.UserName
                                        </a>
                                    </th> 
                                    <td>@item.Email</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</form>


